<Window x:Class="App_Project.OrdersPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Project"
        mc:Ignorable="d"
        Title="OrdersPage"  Height="600" Width="800" Background="LightBlue">
    
    <Grid>
        <!-- Main Card -->
        <Border Background="White" CornerRadius="15" Padding="20" Width="600" Height="517"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="5" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Order Management" FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,10,0,20"/>

                <!-- Customer Selection -->
                <TextBlock Text="Select Customer" FontSize="16" Margin="10,0,0,0" FontWeight="SemiBold"/>
                <ComboBox x:Name="CustomerComboBox" Width="250" Height="25" Margin="10"/>

                <!-- Total Amount Input -->
                <TextBlock Text="Total Amount" FontSize="16" Margin="10,0,0,0" FontWeight="SemiBold"/>
                <TextBox x:Name="TotalAmountBox" Width="250" Height="22" Margin="10"/>

                <!-- Place Order Button -->
                <Button Content="Place Order" Width="150" Height="40" Click="PlaceOrder_Click"
                        Background="#0078D7" Foreground="White" FontWeight="Bold" FontSize="15"
                        BorderThickness="0" HorizontalAlignment="Center" Margin="10"/>

                <!-- Order Data Grid -->
                <DataGrid x:Name="OrderDataGrid" Width="533" Height="187" Margin="10"
                    AutoGenerateColumns="False" HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Customer ID" Binding="{Binding CustomerId}" Width="*"/>
                        <DataGridTextColumn Header="Total Order" Binding="{Binding TotalAmount}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </Border>
    </Grid>
</Window>
